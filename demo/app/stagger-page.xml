<Page
    xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
    xmlns:ui="nativescript-fancy-list-view">
    <ui:FancyListView orientation="vertical" backgroundColor="red" items="{{items}}" itemWidth="100%" layoutType="staggered" spanCount="3" hideScrollBar="true">
        <ui:FancyListView.itemTemplate>
            <GridLayout margin="40%" backgroundColor="blue" rows="auto,*" borderWidth="1" borderColor="gray" borderRadius="10">
                <Label text="{{ title }}" class="t-20 text-center c-black" textWrap="true"/>
                <Image stretch="fill" row="1" src="{{image}}"></Image>
            </GridLayout>
        </ui:FancyListView.itemTemplate>
    </ui:FancyListView>
</Page>
